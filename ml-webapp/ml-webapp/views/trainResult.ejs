<!-- views/trainResult.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Model Training Results</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body class="container mt-5">
    <h1>Model Training Results</h1>
    
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } else { %>
      <div class="alert alert-success">
        <h4><%= message %></h4>
      </div>

      <table class="table table-bordered mt-4">
        <tbody>
          <tr>
            <th>Model Path</th>
            <td><%= modelPath %></td>
          </tr>
          <tr>
            <th>MSE</th>
            <td><%= MSE %></td>
          </tr>
          <tr>
            <th>RÂ² Score</th>
            <td><%= R2 %></td>
          </tr>
          <tr>
            <th>MAE</th>
            <td><%= MAE %></td>
          </tr>
          <tr>
            <th>Median AE</th>
            <td><%= MedianAE %></td>
          </tr>
          <% if (Coefficients) { %>
            <tr>
                <th>Coefficients</th>
                <td><%= Coefficients %></td>
            </tr>
        <% } %>
        <% if (Intercept) { %>
            <tr>
                <th>Intercept</th>
                <td><%= Intercept %></td>
            </tr>
        <% } %>
        </tbody>
      </table>
    <% } %>

    <a href="/" class="btn btn-primary">Back to Home</a>
</body>
</html>
