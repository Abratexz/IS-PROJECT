<!-- views/analysisPreview.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>EDA Results</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body class="container mt-4">
    <div class="row mb-4">
        <!-- Back Button (Left-Aligned) -->
        <div class="col-4 text-start">
            <a href="/" class="btn btn-primary">Back to Home</a>
        </div>
    
        <div class="col-4"></div>
    </div>
  <h2>Exploratory Data Analysis (EDA) Results</h2>
  <!-- 1) Summary Stats -->
  <% if (summary) { %>
    <h4>Summary Statistics</h4>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Metric</th>
          <th>Value</th>
        </tr>
      </thead>
      <tbody>
        <% Object.keys(summary).forEach(function(colName) { %>
          <tr>
            <td colspan="2" class="table-dark"><strong><%= colName %></strong></td>
          </tr>
          <% Object.keys(summary[colName]).forEach(function(metric) { %>
            <tr>
              <td><%= metric %></td>
              <td><%= summary[colName][metric] %></td>
            </tr>
          <% }); %>
        <% }); %>
      </tbody>
    </table>
  <% } %>

  <!-- 2) Correlation Plot -->
  <% if (plotFilename) { %>
    <h4>Correlation Heatmap</h4>
    <img src="/images/<%= plotFilename %>" alt="Correlation Heatmap" style="max-width: 600px;"/>
  <% } else { %>
    <p>No numeric columns to generate correlation heatmap.</p>
  <% } %>

</body>
</html>


