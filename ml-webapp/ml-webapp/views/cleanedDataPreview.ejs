<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cleaned Data Preview</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-center mb-4">Cleaned Data Preview</h2>
        
        <!-- Button Container -->
        <div class="row mb-4">
            <!-- Back Button (Left-Aligned) -->
            <div class="col-4 text-start">
                <a href="/" class="btn btn-primary">Back to Home</a>
            </div>
            
            <!-- Analyze Button (Center-Aligned) -->
            <div class="col-4 text-center">
                <% if (datasetType === 'mobile') { %>
                    <a href="/data/analyze-mobile" class="btn btn-info btn-lg">Analyze Mobile Data</a>
                <% } else if (datasetType === 'worker') { %>
                    <a href="/data/analyze-worker" class="btn btn-warning btn-lg">Analyze Worker Data</a>
                <% } %>
            </div>

            
            <!-- Empty space to balance layout (Right-Aligned) -->
            <div class="col-4"></div>
        </div>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <% columns.forEach(function(column) { %>
                            <th><%= column %></th>
                        <% }); %>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(function(row) { %>
                        <tr>
                            <% columns.forEach(function(column) { %>
                                <td><%= row[column] %></td>
                            <% }); %>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>